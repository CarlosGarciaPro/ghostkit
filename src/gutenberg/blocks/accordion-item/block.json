{
  "name": "ghostkit/accordion-item",
  "parent": ["ghostkit/accordion"],
  "category": "design",
  "title": "Item",
  "description": "A single item within a accordion block.",
  "supports": {
    "html": false,
    "className": false,
    "anchor": true,
    "align": ["wide", "full"],
    "reusable": false
  },
  "usesContext": ["ghostkit/collapseTitleTag"],
  "attributes": {
    "heading": {
      "type": "string",
      "source": "html",
      "selector": ".ghostkit-accordion-item-label",
      "default": "Accordion Item"
    },
    "titleTag": {
      "type": "string",
      "default": "div"
    },
    "slug": {
      "type": "string"
    },
    "active": {
      "type": "boolean",
      "default": false
    }
  }
}
